/* miniprogram/pages/book-detail/book-detail.wxss */
.switch-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 240rpx;
  height: 60rpx;
  background: #ebebec;
  border-radius: 16rpx;
  padding: 4rpx;
  box-sizing: border-box;
}

.switch {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
  border-radius: 16rpx;
  font-size: 24rpx;
}

.switch.checked {
  background: white;
}

.book-info-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 340rpx;
  background: white;
}

.book-info {
  display: flex;
  width: 670rpx;
  height: 256rpx;
}

.book-cover {
  width: 186rpx;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;
  filter: drop-shadow(0px 0px 4px rgba(0, 0, 0, 0.25));
}
.book-cover image {
  width: 100%;
  height: 100%;
}

.book-text {
  padding-left: 40rpx;
}

.book-name {
  font-size: 28rpx;
}
.book-author {
  font-size: 24rpx;
  color: var(--sub-text-color-);
  line-height: 50rpx;
}

.text-card {
  width: 670rpx;
  height: auto;
  margin: 20rpx auto 0 auto;
}
.text-card .text {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: var(--main-text-color-);
}
.text-card .text-info {
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 20rpx;
  color: var(--sub-text-color-);
  height: 60rpx;
}

.text-experience {
  display: block;
  border-bottom: 1px solid #f3f5f7;
  padding-bottom: 10rpx;
}

.text-experience + .text-note {
  display: block;
  color: var(--sub-text-color-);
  padding-top: 10rpx;
}

.text-experience + .text-note::before {
  content: '>';
  padding-right: 10rpx;
}
