<!-- miniprogram/pages/book-detail/book-detail.wxml -->
<navbar bgColor="#fff">
  <view slot="title">
    <view class="switch-wrap">
      <view class="switch">时间</view>
      <view class="switch checked">页码</view>
    </view>
  </view>
</navbar>
<view class="book-info-wrap">
  <view class="book-info">
    <view class="book-cover">
      <image src="{{book.pic}}"></image>
    </view>
    <view class="book-text">
      <view class="book-name">{{book.title}}</view>
      <view class="book-author">{{book.author_name}}</view>
      <view class="book-author">{{book.year}}</view>
    </view>
  </view>
</view>
<!-- <divider>第一章</divider> -->
<view class="text-card" wx:for="{{notes}}">
  <view class="text">
    {{item.note}}
  </view>
  <view class="text-info">
    <view class="position">
      <text wx:if="{{item.position}}">第{{item.position}}页</text>
    </view>
    <view class="date">{{item.date.$date}}</view>
  </view>
</view>