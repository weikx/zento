/* miniprogram/pages/bookshelf/bookshelf.wxss */
.nav-switch {
  display: flex;
  justify-content: space-between;
  align-items:flex-end;
  width: 180rpx;
}
.nav-switch__checked {
  position: relative;
  color: #4E4E4E;
  font-size: 48rpx;
  transform: all .3s;
}
.nav-switch__checked::after {
  position: absolute;
  bottom: 0;
  left: 4rpx;
  content: "";
  display: block;
  width: 90rpx;
  height: 22rpx;
  background: linear-gradient(0deg, #1EA2FC 0%, rgba(172, 221, 254, 0.369776) 61.68%, rgba(255, 255, 255, 0) 100%);
  border-radius: 10rpx;
  z-index: -1;
}
.nav-switch__text {
  font-size: 28rpx;
  color: #8C8C8C;
  transform: all .3s;
  border: 15rpx solid transparent;
  border-top: 30rpx solid transparent;
  border-bottom: 0px;
}

.search-wrap {
  position: relative;
  margin-bottom: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  height: 55px;
  filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.05));
}
.search-input {
  height: 70rpx;
  width: 670rpx;
  background: #F8F8F8;
  border-radius: 35rpx;
  font-size: 24rpx;
  padding-left: 60rpx;
}

.books-wrap {
  display: flex;
  justify-content: space-between;
  width: 670rpx;
  margin: 30rpx auto;
  flex-wrap: wrap;
  padding-bottom: 20px;
}
.add-book {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 0 0 30%;
  height: 270rpx;
  margin-bottom: 30rpx;
  filter: drop-shadow(0px 8rpx 8rpx rgba(0, 0, 0, 0.05));
  text-align: center;
  border: 1px solid #1EA5FC;
  border-radius: 10rpx;
}
.add-icon {
  width: 60rpx;
  height: 60rpx;
}
.book {
  flex: 0 0 30%;
  height: 310rpx;
  margin-bottom: 30rpx;
  filter: drop-shadow(0px 8rpx 8rpx rgba(0, 0, 0, 0.05));
  text-align: center;
}
.book-img {
  width: 100%;
  height: 270rpx;
  border-radius: 10rpx;
}
.book-name {
  display: block;
  font-size: 24rpx;
  line-height: 40rpx;
  height: 40rpx;
  overflow: hidden;
  color: #4E4E4E;
}
.search-icon {
  position: absolute;
  width: 35rpx;
  height: 28rpx;
  left: 30rpx;
}