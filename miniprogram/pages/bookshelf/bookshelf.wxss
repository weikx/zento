/* miniprogram/pages/bookshelf/bookshelf.wxss */
.nav-switch {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  width: 180rpx;
}
.nav-switch__checked {
  position: relative;
  color: var(--main-text-color-);
  font-size: 48rpx;
  line-height: 55rpx;
  transform: all 0.3s;
}
.nav-switch__checked::after {
  position: absolute;
  bottom: 0;
  left: 4rpx;
  content: '';
  display: block;
  width: 90rpx;
  height: 22rpx;
  background: linear-gradient(
    0deg,
    #f9b198 0%,
    rgba(251, 201, 183, 0.697917) 30.73%,
    rgba(255, 255, 255, 0) 100%
  );
  border-radius: 10rpx;
  z-index: -1;
}
.nav-switch__text {
  font-size: 28rpx;
  color: var(--sub-text-color-);
  transform: all 0.3s;
  border: 15rpx solid transparent;
  border-top: 30rpx solid transparent;
  border-bottom: 0px;
}

.search-position {
  width: 100vw;
  height: 55px;
}

.search-wrap {
  position: fixed;
  z-index: 999;
  width: 100vw;
  left: 0;
  margin-bottom: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  height: 55px;
  filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.05));
}
.search-input {
  height: 70rpx;
  width: 650rpx;
  background: var(--page-bg-color-);
  border-radius: 35rpx;
  font-size: 24rpx;
  padding-left: 60rpx;
}

.books-wrap {
  display: flex;
  justify-content: space-between;
  width: 670rpx;
  margin: 30rpx auto;
  flex-wrap: wrap;
  padding-bottom: 20px;
  min-height: 100vh;
}
.add-book {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 0 0 30%;
  height: 270rpx;
  margin-bottom: 30rpx;
  filter: drop-shadow(0px 8rpx 8rpx rgba(0, 0, 0, 0.05));
  text-align: center;
  border: 1px solid var(--theme-color-);
  border-radius: 10rpx;
}
.add-icon {
  width: 60rpx;
  height: 60rpx;
}
.book {
  flex: 0 0 30%;
  height: 310rpx;
  margin-bottom: 30rpx;
  filter: drop-shadow(0px 8rpx 8rpx rgba(0, 0, 0, 0.05));
  text-align: center;
}
.book-img {
  width: 100%;
  height: 270rpx;
  border-radius: 10rpx;
}
.book-name {
  display: block;
  font-size: 24rpx;
  line-height: 40rpx;
  height: 40rpx;
  overflow: hidden;
  color: var(--main-text-color-);
}
.search-icon {
  position: absolute;
  width: 35rpx;
  height: 28rpx;
  left: 30rpx;
}

.tags-wrap {
  width: 100vw;
  padding: 0 20rpx 0 40rpx;
  box-sizing: border-box;
  margin: 0 auto;
  padding-bottom: 20px;
}
.tag {
  font-size: 32rpx;
  color: var(--sub-text-color-);
  padding: 10rpx 20rpx;
  background: #f1efe5;
  border-radius: 20rpx;
  text-align: center;
  line-height: 44rpx;
  margin-top: 30rpx;
  margin-right: 20rpx;
  float: left;
}

.tip {
  width: 100%;
  font-size: 24rpx;
  color: var(--desc-text-color-);
  text-align: center;
  padding-bottom: 100rpx;
}
