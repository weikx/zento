/* miniprogram/pages/about/about.wxss */
.wrap {
  width: 100vw;
  height: 40vh;
}
.bg-img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100vw;
  height: 85vw;
  z-index: -1;
}
.logo {
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  margin-top: 5vw;
}
.app-name {
  font-size: 48rpx;
  color: var(--main-text-color-);
  text-align: center;
  margin-top: 2vw;
}
.app-version {
  font-size: 24rpx;
  text-align: center;
  color: var(--sub-text-color-);
  margin-top: 1vw;
}
.list-wrap {
  margin-top: 25vw;
}
.list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  width: 670rpx;
  height: 100rpx;
  background: #fff;
  padding: 0 20rpx;
  margin: 0 auto;
  margin-top: 4vw;
  border-radius: 10rpx;
  font-size: 24rpx;
}
.list-left {
  color: var(--main-text-color-);
}
.list-right {
  display: flex;
  align-items: center;
  color: var(--sub-text-color-);
}
.arrow {
  width: 14rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.website {
  position: fixed;
  width: 100vw;
  text-align: center;
  bottom: 90rpx;
  font-size: 24rpx;
  color: var(--theme-color-);
}
.copyright {
  position: fixed;
  width: 100vw;
  text-align: center;
  bottom: 50rpx;
  font-size: 24rpx;
  color: var(--desc-text-color-); 
}
.tipstyle {
  background-color: var(--theme-color-) !important;
}