/* miniprogram/pages/home/home.wxss */
.top-bg {
  background: #fff;
  height: 40rpx;
}
.control-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 670rpx;
  height: 50px;
  margin: 25px auto;
  background: #fff;
  box-shadow: 0px 0px 10px rgba(109, 128, 185, 0.05);
  border-radius: 5px;
  text-align: center;
}
.control-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  color: #828282;
  font-size: 12px;
  font-weight: bold;
}
.control-icon {
  width: 15px;
  height: 15px;
  margin-right: 5px;
}

.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 670rpx;
  height: 18px;
  margin: 25px auto;
}
.title-bar .title {
  color: #4E4E4E;
  text-shadow: 0px 4px 5px rgba(78, 78, 78, 0.25);
  font-size: 18px;
  font-weight: bold;
}
.title-bar .more {
  color: #A0A0A0;
  font-size: 11px;
  text-shadow: 0px 4px 5px rgba(78, 78, 78, 0.25);
}

.books-banner {
  width: 670rpx;
  height: 190px;
  margin: 25px auto;
  white-space: nowrap;
}
.banner-book {
  display: inline-block;
  width: 135px;
  height: 190px;
  box-shadow: 0px -1px 2px 2px rgba(124, 124, 124, 0.05);
  border-radius: 5px;
  overflow: hidden;
  margin-right: 15px;
}
.banner-book .book-img {
  width: 100%;
  height: 100%;
}