/* pages/search-book/search-book.wxss */
.search-wrap {
  position: relative;
  z-index: 999;
  background: #fff;
  height: 55px;
  filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.05));
}
.input-wrap {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 670rpx;
  height: 100%;
  margin: 0 auto;
  z-index: 999;
}
.search-input {
  height: 70rpx;
  width: 590rpx;
  background: var(--page-bg-color-);
  border-radius: 35rpx;
  font-size: 24rpx;
  padding-left: 70rpx;
}
.search-icon {
  position: absolute;
  width: 35rpx;
  height: 28rpx;
  left: 30rpx;
}
.scan-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.books-card {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 670rpx;
  min-height: 220rpx;
  margin: 0 auto;
  margin-top: 70rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 8rpx rgba(0, 0, 0, 0.05);
}
.card-left {
  width: 152rpx;
  height: 230rpx;
  margin-top: -35rpx;
  border-radius: 6rpx;
  box-shadow: 0rpx 8rpx 20rpx rgba(139, 139, 139, 0.3);
  overflow: hidden;
  background-color: var(--page-bg-color-);
}
.book-img {
  width: 100%;
  height: 100%;
}
.card-right {
  flex: 1;
  padding: 20rpx;
}
.book-name {
  font-size: 36rpx;
  color: var(--main-text-color-);
}
.author-name {
  font-size: 28rpx;
  color: var(--sub-text-color-);
}
.publish-year {
  font-size: 24rpx;
  color: var(--desc-text-color-);
}

.create-book {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 45px;
  background: #fff;
  box-shadow: 0px -4px 5px rgba(0, 0, 0, 0.05);
  border-radius: 10px 10px 0px 0px;
  color: var(--main-text-color-);
  font-size: 14px;
}
.pen-icon {
  width: 40rpx;
  height: 40rpx;
}

.list-wrap {
  height: calc(100vh - 55px - 45px); /* 55 = search input  45 = add book*/
}
